@using HR_System.Models;

@{
    ViewBag.Title = "EditSalatyItem";
    SalaryItem salaryItem = ViewData["salaryItemView"] as SalaryItem;
}

<h1 class="text-center">EditSalatyItem</h1>
<br />
<br />
<br />
<br />
<div class="container col-lg-6" style="float:none; display:block; margin-left:auto; margin-right:auto">
    <form method="post" action="/SalaryItemSettings/SaveSalaryItem">
        <div class="form-group input-group-lg">
            <label for="ItemId">薪酬项目编号</label>
            <input type="text" class="form-control" id="ItemId" placeholder="ItemId" disabled value="@salaryItem.Id">
        </div>
        <input type="hidden" name="ItemId" value="@salaryItem.Id">
        <div class="form-group input-group-lg">
            <label for="ItemName">薪酬项目名称</label>
            <input type="text" class="form-control" id="ItemName" placeholder="ItemName" name="ItemName" value="@salaryItem.Name" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block input-group-lg">Submit</button>
    </form>
</div>

