@using HR_System.Models;

@{
    ViewBag.Title = "SalaryStandardManage";
    List<SalaryStandard> list = ViewData["standardListView"] as List<SalaryStandard>;
}

<br />
<h2>所有薪酬标准</h2>

<p><a href="" class="btn btn-success btn-lg">添加薪酬标准</a></p>

<div class="container-fluid">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>薪酬标准编号</th>
            <th>薪酬标准名称</th>
            <th>薪酬标准金额</th>
            <th>选项</th>
        </tr>
        @foreach (var s in list)
        {
            <tr>
                <td>@s.StandardFileNumber</td>
                <td>@s.StandardName</td>
                <td>￥@s.Total</td>
                <td>@Html.ActionLink("详情", "DetailSalaryStandard", "StandardManage", new { id = s.Id }, new { @class = "btn btn-primary" })&nbsp;&nbsp;@Html.ActionLink("编辑", "EditSalatyItem", "SalaryItemSettings", new { id = s.Id }, new { @class = "btn btn-warning" })&nbsp;&nbsp;<button type="button" class="btn btn-danger" onclick="Delete(@s.Id, '@s.StandardName', 'DeleteSalaryItem')" data-toggle="modal" data-target="#deleteModal">删除</button></td>
            </tr>
        }
    </table>
</div>

